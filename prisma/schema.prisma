generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  password String
}

model Organisation {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String  
}

model OrganisationUser {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  userId         String
  organisationId String 
  role           Role[] 
}

enum Role {
  admin
  user
}
